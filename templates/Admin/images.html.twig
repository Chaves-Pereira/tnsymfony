{% extends 'layout.html.twig' %}

{% block body %}
	<div class="container">
		<div class="row">
			{% for image in images %}
				<div class="col-md-3 col-sm-6 col-xs-12">
					<div>
						<img src="{{ asset(image.webPath) }}" alt="{{ image.alt }}">
					</div>
					<div>
						<a href="{{ path('editImage', { 'id': image.id }) }}" class="btn btn-info"><span class="glyphicon glyphicon-edit"></span></a>
						<button data-target="#imageDialog{{ image.id }}" data-toggle="modal" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span></button>

						<div class="modal fade" id="imageDialog{{ image.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" arria-hidden="true">
							<div class="modal-dialog">
								<div class="modal-content">
									<div class="modal-header">
										<button type="button" class="close" data-dismiss="modal" arria-hidden="true">&times;</button>
										<h4>Confirmation needed</h4>
									</div>
									<div class="modal-body">
										Are you sure you want to delete this image?
									</div>
									<div class="modal-footer">
										<a class="btn btn-danger" href="{{ path('deleteImage', {'id': image.id }) }}">Confirm</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}