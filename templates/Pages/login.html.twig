{% extends "layout.html.twig" %}

{% block body %}
	
	<div class="well container">
		
		{% if error %}
		<div class="alert alert-danger">{{ error.message }}</div>
		{% endif %}

		<form action="{{ path('login_check') }}" method="post" class="form-group">
		    
		    <div class="form-group row">
				<label for="username" class="col-sm-2 col-form-label">Username</label>
		   		<input type="text" id="username" name="_username" class="form-control col-sm-8" placeholder="Username" />
		    </div>
		    

		    <div class="form-group row">
				<label for="password" class="col-sm-2 col-form-label">Password</label>
		    	<input type="password" id="password" name="_password" class="form-control col-sm-8" placeholder="Password" />
		    </div>
		    
		    <br />
		    <input type="submit" value="Connexion" class="btn btn-primary" />
		  </form>
	</div>  
  

{% endblock %}